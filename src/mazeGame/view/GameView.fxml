<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="mazeGame.controller.GameViewController" id="scrollPanel" fx:id="scrollPanel"
            hbarPolicy="NEVER" vbarPolicy="NEVER" pannable="true">
    <stylesheets>
        <URL value="@/mazeGame/view/styleSheets/GameView.css"/>
    </stylesheets>
    <content>
        <AnchorPane id="GameWindow" fx:id="GameWindow">
            <Canvas fx:id="mazeDrawable" height="5000" width="5000" AnchorPane.leftAnchor="10"
                    AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10"/>
            <Canvas fx:id="playerDrawable" height="5000" width="5000" AnchorPane.leftAnchor="10"
                    AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10"/>
            <Canvas fx:id="fogDrawable" height="5000" width="5000" AnchorPane.leftAnchor="10"
                    AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10"/>
        </AnchorPane>
    </content>
</ScrollPane>
